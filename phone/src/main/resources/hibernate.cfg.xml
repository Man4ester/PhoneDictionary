<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect
		</property>
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<!-- Assume test is the database name -->
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1/phone_dictionary
		</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">1111</property>

		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.show_sql">true</property>
		
		
		<mapping class="com.hmel.central.models.Client" />
		<mapping class="com.hmel.central.models.Phone" />
		<mapping class="com.hmel.central.models.Address" />



	</session-factory>
</hibernate-configuration>